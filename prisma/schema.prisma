generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// lucia authentication with prisma scheme
model User {
  id           String    @id
  username     String    @unique
  displayName  String 

  // ? means optional depending on using google authentication
  email        String? @unique
  passwordHash String?
  googleId     String? @unique
  avatarUrl    String?
  bio          String?
  sessions     Session[]

  createdAt DateTime @default(now())
  @@map("users")
}


model Session{
  id            String @id
  userId        String
  expiresAt     DateTime
  // delete session after
  User          User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}